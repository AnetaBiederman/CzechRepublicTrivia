<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/cr_flag"
    tools:context="com.example.android.czechrepublictrivia.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_1" />

        <RadioGroup
            android:id="@+id/question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_1_brno"
                android:text="@string/brno" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_1_praha"
                android:text="@string/prague" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_1_pardubice"
                android:text="@string/pardubice" />

        </RadioGroup>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_2" />

        <EditText
            android:id="@+id/question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/president_s_last_name"
            android:inputType="textCapWords" />

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_3" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_poland"
                android:text="@string/poland" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_france"
                android:layout_toRightOf="@id/chb_q3_poland"
                android:text="@string/france" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_germany"
                android:layout_toRightOf="@id/chb_q3_france"
                android:text="@string/germany" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_slovenia"
                android:layout_below="@id/chb_q3_poland"
                android:text="@string/slovenia" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_austria"
                android:layout_below="@id/chb_q3_france"
                android:layout_toRightOf="@id/chb_q3_slovenia"
                android:text="@string/austria" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb_q3_italy"
                android:layout_below="@id/chb_q3_germany"
                android:layout_toRightOf="@id/chb_q3_austria"
                android:text="@string/italy" />

        </RelativeLayout>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_4" />

        <RadioGroup
            android:id="@+id/question_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_4_snezka"
                android:text="@string/snezka" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_4_jested"
                android:text="@string/jested" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_4_rip"
                android:text="@string/rip" />

        </RadioGroup>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_5" />

        <RadioGroup
            android:id="@+id/question_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_5_water"
                android:text="@string/water" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_5_cola"
                android:text="@string/coca_cola" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_5_beer"
                android:text="@string/beer" />

        </RadioGroup>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_6" />

        <EditText
            android:id="@+id/question_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/dd_mm_yyyy"
            android:inputType="textCapWords" />

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_7" />

        <RadioGroup
            android:id="@+id/question_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_7_svickova"
                android:text="@string/svickova" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_7_gulas"
                android:text="@string/gulas" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_7_bramborak"
                android:text="@string/bramborak" />

        </RadioGroup>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_8" />

        <RadioGroup
            android:id="@+id/question_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_8_slovakia" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/slovak" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_8_germany"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/germany" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_8_czech"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/czech" />

        </RadioGroup>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_9" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_bernard"
                android:text="@string/bernard" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_pilsner_urquel"
                android:layout_toRightOf="@id/chb9_bernard"
                android:text="@string/pilsner_urquel" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_stella_artois"
                android:layout_toRightOf="@id/chb9_pilsner_urquel"
                android:text="@string/stella_artois" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_tuborg"
                android:layout_below="@id/chb9_bernard"
                android:text="@string/tuborg" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_budvar"
                android:layout_below="@id/chb9_pilsner_urquel"
                android:layout_toRightOf="@id/chb9_tuborg"
                android:text="@string/budweiser_budvar" />

            <CheckBox
                style="@style/CheckBoxStyle"
                android:id="@+id/chb9_ursur"
                android:layout_below="@id/chb9_stella_artois"
                android:layout_toRightOf="@id/chb9_budvar"
                android:text="@string/ursur" />

        </RelativeLayout>

        <TextView
            style="@style/TextViewQuestionStyle"
            android:text="@string/question_10" />

        <RadioGroup
            android:id="@+id/question_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_10_olomouc"
                android:text="@string/oloumouc" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_10_kutna_hora"
                android:text="@string/kutna_hora" />

            <RadioButton
                style="@style/RadioButtonStyle"
                android:id="@+id/question_10_chomutov"
                android:text="@string/chomutov" />

        </RadioGroup>

        <Button
            android:id="@+id/submit_quiz_answers"
            style="@style/ButtonStyle"
            android:onClick="submitQuizAnswers"
            android:text="@string/submit_answer" />

        <Button
            style="@style/ButtonStyle"
            android:onClick="reset"
            android:text="@string/reset" />

    </LinearLayout>

</ScrollView>
